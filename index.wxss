.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.background {
  position:absolute;
  top:0;
  left:0;
  z-index:-1;
  height:100%;
  width:100%;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: rgb(121, 245, 19);
}

.usermotto {
  margin-top: 20px;
}


.wrapper{
  height: 100%;
}
.page-body-form-value{
  font-size: 14px;
  color:white;
  font-weight: bold;
  padding-left: 15px;
  border: 1px solid rgb(26, 173, 25);
  border-radius: 4px;
  height: 30px;
  line-height: 30px;
}
.page-body-form-key{
  font-size:14px;
  padding: 10px;
  margin-top:15px;
  margin-left: 120px; 
  font-family: "Microsoft Yahei";
  font-weight: bold;
  height: 30px;
  line-height: 30px;
  color: white;
}
.page-body-button{
